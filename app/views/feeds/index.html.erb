<%= button_to "New", new_feed_path, :method => :get, :class => 'btn btn-primary float-right' %>

<p class="lead">
  <div class="list-group">
    <% @feeds.each do |feed| %>
      <%= link_to feed_path(feed.id), :class => 'list-group-item list-group-item-action flex-column align-items-start' do %>
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= feed.title %></h5>
          <small><%= time_ago_in_words(feed.modified_at) %></small>
        </div>
        <div class="d-flex w-100 justify-content-between">
          <div>
            <p class="mb-1"><%= truncate(feed.description, :length => 255) %></p>
            <small class="text-muted"><%= feed.language %></small>
          </div>
          <%= button_to "Delete", edit_feed_path(feed.id), :method => :delete, :class => 'btn btn-danger' %>
        </div>
      <% end %>
    <% end %>
    <%= paginate @feeds %>
  </div>
</p>